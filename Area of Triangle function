#include<stdio.h>
#include<conio.h>

float area(float b,float h)
{
  return 0.5*b*h;
}

main()
{
  float base,height,ans;
  clrscr();
  printf("Enter the value of base\n");
  scanf("%f",&base);
  printf("Enter the value of height\n");
  scanf("%f",&height);
  ans=area(base,height);
  printf("The area of the triangle is:%f",ans);
  getch();
  return(0);
)
  
